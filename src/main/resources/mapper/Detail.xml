<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daishin.pdf.mapper.DetailMapper">

    <insert id = "save" parameterType="Detail">
        INSERT INTO dbo.DETAIL
        (PK
        ,TR_KEY
        ,TOTAL_SEND_CNT
        ,DLV_TYPE_CD
        ,PRINT_TYPE_NM
        ,PAGE_CNT
        ,RET_YN
        ,RECV_NUM
        ,DM_LINK_KEY
        ,CIFNO
        ,DLV_CD
        ,RECV_NM
        ,RECV_POST_CD
        ,RECV_ADDR
        ,RECV_ADDR_DETAIL
        ,PDF_PATH
        ,SAVE_DATE
        ,MASTER
        ,PDF_NM)
        VALUES
        (#{PK}
        ,#{TR_KEY}
        ,#{TOTAL_SEND_CNT}
        ,#{DLV_TYPE_CD}
        ,#{PRINT_TYPE_NM}
        ,#{PAGE_CNT}
        ,#{RET_YN}
        ,#{RECV_NUM}
        ,#{DM_LINK_KEY}
        ,#{CIFNO}
        ,#{DLV_CD}
        ,#{RECV_NM}
        ,#{RECV_POST_CD}
        ,#{RECV_ADDR}
        ,#{RECV_ADDR_DETAIL}
        ,#{PDF_PATH}
        ,GETDATE()
        ,#{MASTER}
        ,#{PDF_NM})
    </insert>

    <select id="countGroup" parameterType="Detail" resultType="int">
        SELECT COUNT(*) FROM dbo.DETAIL WITH(NOLOCK) WHERE TR_KEY = #{TR_KEY}
    </select>

    <select id="countMaster" parameterType="String" resultType="int">
        SELECT COUNT(*) FROM dbo.DETAIL WITH(NOLOCK) WHERE MASTER = #{MASTER}
    </select>

<!--
    <select id="findLast" parameterType="ReqParam" resultType="Integer">
        SELECT COUNT(*) FROM dbo.REQ WHERE TR_KEY = #{TR_KEY} and RECV_NUM = #{TOTAL_SEND_CNT}
    </select>
-->
    <select id="getTrGroup" parameterType="Detail" resultType="hashmap">
        SELECT * FROM dbo.DETAIL WITH(NOLOCK) WHERE TR_KEY = #{TR_KEY}
    </select>

    <select id="getMasterGroup" parameterType="String" resultType="Detail">
        SELECT * FROM dbo.DETAIL WITH(NOLOCK) WHERE MASTER = #{MASTER}
    </select>

    <select id="findDetail" parameterType="Detail" resultType="Detail">
        SELECT * FROM dbo.DETAIL WITH(NOLOCK) WHERE PK = #{PK}
    </select>

    <update id="updatePdfPath" parameterType="Detail">
        UPDATE dbo.DETAIL SET PDF_PATH = #{PDF_PATH} WHERE MASTER = #{MASTER}
    </update>

    <delete id="deleteById" parameterType="Detail">
        DELETE FROM dbo.DETAIL WHERE PK = #{PK}
    </delete>

</mapper>