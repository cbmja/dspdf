<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daishin.pdf.mapper.ErrorMapper">

    <insert id = "save" parameterType="Error">
        INSERT INTO dbo.ERROR
        (ERROR_MESSAGE
        ,CREATE_DATE
        ,MASTER_KEY
        ,ERROR_CODE
        )
        VALUES
        (#{ERROR_MESSAGE}
        ,GETDATE()
        ,#{MASTER_KEY}
        ,#{ERROR_CODE}
        )
    </insert>

    <select id="countSearch" resultType="int" parameterType="com.daishin.pdf.page.ErrorSearch">
        SELECT COUNT(*) FROM dbo.ERROR WHERE ${cate} LIKE CONCAT('%',#{search},'%') AND CREATE_DATE BETWEEN #{startDate} AND #{endDate}
    </select>

    <select id="selectErrorsByPage" parameterType="com.daishin.pdf.page.Page" resultType="Error">
        SELECT * FROM dbo.ERROR WHERE ${cate} LIKE CONCAT('%',#{search},'%') AND CREATE_DATE BETWEEN #{startDate} AND #{endDate} ORDER BY ${sortCate} ${sort} OFFSET #{startNum} ROWS FETCH NEXT #{pageElement} ROWS ONLY
    </select>

    <select id="selectById" parameterType="String" resultType="Error">
        SELECT * FROM dbo.ERROR WHERE ID = #{id}
    </select>

</mapper>