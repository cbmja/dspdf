<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daishin.pdf.mapper.MasterMapper">

    <insert id = "save" parameterType="Master">
        INSERT INTO dbo.MASTER
        (MASTER_KEY
        ,TOTAL_SEND_CNT
        ,STATUS
        ,SEND_CNT)
        VALUES
        (#{masterKey}
        ,#{totalSendCnt}
        ,#{status}
        ,#{sendCnt})
    </insert>

    <select id="findMaster" parameterType="Master" resultType="Master">
        SELECT * FROM dbo.MASTER WHERE MASTER_KEY = #{masterKey}
    </select>

    <update id="updateSendCnt" parameterType="Master">
        UPDATE dbo.MASTER SET SEND_CNT = #{sendCnt} WHERE MASTER_KEY = #{masterKey}
    </update>

    <update id="updateStatus" parameterType="Master">
        UPDATE dbo.MASTER SET STATUS = #{status} WHERE MASTER_KEY = #{masterKey}
    </update>
</mapper>